# Command line
alias lt='ls -ltrh'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias clean='rm -rf *~; rm #*#; rm -rf .*~'
alias c='clear; ls; pwd'
alias diff='colordiff'
alias emacsnw='emacs -nw'
alias e='emacs'
alias enw='emacs -nw'
alias ping='ping -c 2'
alias df='df -h'
alias du='du -ch'
alias root='root -l'
alias grep='grep --color'
alias g='grep'
alias w='which'
alias h='history'
alias hpg='history | grep'
alias epg='env | grep'
alias nc='/usr/bin/nc'
alias sucl='source ~/dotfiles/zsh/zshrc-clion'

# Machine
